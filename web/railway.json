{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install --legacy-peer-deps && npm run build"
  },
  "deploy": {
    "startCommand": "HOSTNAME=0.0.0.0 node .next/standalone/server.js",
    "healthcheckPath": "/",
    "healthcheckTimeout": 60
  }
}
